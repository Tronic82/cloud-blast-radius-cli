{
    "name": "Blast Radius CLI Dev",
    "image": "mcr.microsoft.com/devcontainers/python:3.14-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/terraform:1": {
            "version": "1.14.4"
        },
        "ghcr.io/devcontainers/features/go:1": {
            "version": "1.23",
            "golangciLintVersion": "1.61.0"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "hashicorp.terraform",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml",
                "EditorConfig.EditorConfig",
                "ms-python.python",
                "ms-python.pylint"
            ]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "go mod tidy && python -m pip install --user pre-commit commitizen && pre-commit install"
}